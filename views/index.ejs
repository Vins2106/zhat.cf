<!DOCTYPE html>
<html>
  <head>
    <%- include("./parts/head.ejs") %>
  </head>
  <body>
    
    <div class="navbar-brand">
      Zhat - online chat app
    </div>
    <div class="navbar-account">
      <div class="profile" onclick="location.href = '/settings'">
      <img class="account-avatar" alt="avatar" src="<%= req.session.user.Avatar %>">
      <span class="account-username"><%= req.session.user.Username %></span>
      </div>
      <button class="btn btn-danger" onclick="location.href = '/logout'">
        Logout
      </button>
    </div>
    
    <% if (!contacts[0]) { %>
    <h3 class="no-contact">
      no user available
    </h1>
    <% } else { %>
    <div class="account-list">
      <div class="account">
      <img class="account-avatar-2" alt="avatar" src="<%= req.session.user.Avatar %>">
      <span class="account-username-2"><%= req.session.user.Username %></span>        
      </div>
    </div>    
    <% } %>
    
    <div class="add-contact" onclick="location.href = '/contact/add'">
      <i class="fa fa-plus" style="margin-top: 25%; font-size: 30px;"></i>
    </div>
    
  </body>
</html> 